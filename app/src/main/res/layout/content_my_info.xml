<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserTeamInfo.MyInfoActivity"
    tools:showIn="@layout/activity_my_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_account_box_grey_300_48dp" />

        <TextView
            android:id="@+id/my_info_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="账号"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="昵称"
            android:textColor="@color/blackgrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_nick_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="性别"
            android:textColor="@color/blackgrey"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_sex_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="生日"
            android:textColor="@color/blackgrey"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_birth_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="手机"
            android:textColor="@color/blackgrey"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_tele_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="邮箱"
            android:textColor="@color/blackgrey"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_mail_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="签名"
            android:textColor="@color/blackgrey"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_sign_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="你还未填写哟"
            android:textColor="@color/blackgrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/my_info_modify_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

</LinearLayout>